{
    "name": "spooled-cloud/spooled",
    "description": "Official PHP SDK for Spooled Cloud job queue service",
    "type": "library",
    "license": "Apache-2.0",
    "keywords": [
        "spooled",
        "job-queue",
        "task-queue",
        "background-jobs",
        "webhooks",
        "cron",
        "scheduler",
        "workflow",
        "grpc"
    ],
    "authors": [
        {
            "name": "Spooled Cloud",
            "email": "support@spooled.cloud"
        }
    ],
    "homepage": "https://spooled.cloud",
    "support": {
        "issues": "https://github.com/spooled-cloud/spooled-sdk-php/issues",
        "source": "https://github.com/spooled-cloud/spooled-sdk-php"
    },
    "require": {
        "php": "^8.2",
        "google/protobuf": "^4.33",
        "grpc/grpc": "^1.74",
        "guzzlehttp/guzzle": "^7.8",
        "nyholm/psr7": "^1.8",
        "psr/http-client": "^1.0",
        "psr/http-message": "^2.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.49",
        "mockery/mockery": "^1.6"
    },
    "suggest": {
        "ext-grpc": "Required for gRPC transport support",
        "ext-protobuf": "Required for gRPC transport support",
        "grpc/grpc": "Required for gRPC transport support",
        "google/protobuf": "Required for gRPC transport support",
        "ratchet/pawl": "Required for WebSocket realtime support"
    },
    "autoload": {
        "psr-4": {
            "Spooled\\": "src/",
            "Spooled\\V1\\": "src/Grpc/Stubs/Spooled/V1/",
            "GPBMetadata\\": "src/Grpc/Stubs/GPBMetadata/"
        },
        "classmap": [
            "src/Types/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Spooled\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testsuite=unit --no-coverage",
        "test:unit": "phpunit --testsuite=unit --no-coverage",
        "test:integration": "phpunit --testsuite=integration --no-coverage",
        "test:scripts": "phpunit --testsuite=scripts --no-coverage",
        "test:coverage": "phpunit --testsuite=unit --coverage-html coverage --coverage-text",
        "test:all": "phpunit --no-coverage",
        "analyse": "phpstan analyse",
        "format": "php-cs-fixer fix",
        "format:check": "php-cs-fixer fix --dry-run --diff",
        "scripts:test-local": "php scripts/test-local.php",
        "scripts:test-production": "php scripts/test-production.php",
        "scripts:verify-production": "php scripts/verify-production.php",
        "ci": [
            "@format:check",
            "@analyse",
            "@test:coverage"
        ]
    },
    "scripts-descriptions": {
        "test": "Run unit tests",
        "test:unit": "Run unit tests",
        "test:integration": "Run integration tests (requires API_KEY and BASE_URL)",
        "test:scripts": "Run script parity tests",
        "test:coverage": "Run unit tests with code coverage",
        "test:all": "Run all test suites",
        "analyse": "Run PHPStan static analysis",
        "format": "Fix code style issues",
        "format:check": "Check code style without fixing",
        "scripts:test-local": "Run local test script (parity with Node/Python)",
        "scripts:test-production": "Run production test script",
        "scripts:verify-production": "Interactive production verification",
        "ci": "Run all CI checks"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
